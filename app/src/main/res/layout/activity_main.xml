<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:text="Login"
        android:textColor="@color/violeta"
        android:textSize="40dp"
        android:layout_marginHorizontal="150dp"
        android:layout_marginTop="60dp"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="90dp"
        android:src="@drawable/goku"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="60dp" />


    <EditText
        android:id="@+id/user_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User"
        app:layout_editor_absoluteY="300dp"
        app:layout_editor_absoluteX="10dp"
        android:layout_marginHorizontal="50dp"
        />

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        app:layout_editor_absoluteY="350dp"
        app:layout_editor_absoluteX="10dp"
        android:layout_marginHorizontal="50dp"
        />

    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_editor_absoluteY="410dp"
        app:layout_editor_absoluteX="60dp"
        android:layout_gravity="center"
        android:textColor="@color/red"
        />


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_editor_absoluteY="450dp"
        android:layout_marginHorizontal="140dp"
        android:text="Send"
        android:textSize="20dp"
        />

</LinearLayout>